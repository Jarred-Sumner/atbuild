{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2019",
    "lib": ["ES2019"],
    "outDir": "types",
    "rootDir": "src",
    "sourceMap": true,
    "noImplicitAny": false,
    "noEmitOnError": false,
    "esModuleInterop": true,
    "emitDeclarationOnly": true,
    "declaration": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "strict": false,
    "downlevelIteration": true
  },
  "include": ["src", "src/**.jsb, src/**.tsb"],

  "exclude": ["node_modules", ".vscode-test", "**.test.ts"]
}

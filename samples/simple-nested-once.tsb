@export function $createHoursFormatter(prefix: string) {
  if (prefix === "hh") {
    @run {
      return function (date: Date) {
        return (date.getUTCHours() % 12).padStart(2, "0")
      }
    @}
  } else if (prefix === "h") {
    @run {
      return function (date: Date) {
        return date.getUTCHours().padStart(2, "0")
      }
    @}
  }

@}